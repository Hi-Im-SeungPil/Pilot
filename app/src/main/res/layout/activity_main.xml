<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.MainActivity">
    <TextView
        android:id="@+id/textview_product"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:textSize="27sp"
        android:text="@string/activity_main_title"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <FrameLayout
        android:id="@+id/framelayout_setting_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_product"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="18dp"
        android:elevation="10dp"/>

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/edittext_search_main"
        app:layout_constraintTop_toTopOf="@+id/edittext_search_main"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_search_main"
        android:src="@drawable/img_search_2x"/>
    <EditText
        android:id="@+id/edittext_search_main"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:textSize="17sp"
        android:hint="@string/activity_main_edittext_hint"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="18dp"
        android:paddingLeft="57dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_product"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_adjust"
        android:background="@drawable/main_edittext"
        android:maxLines="1"/>
    <Button
        android:id="@+id/button_adjust"
        android:layout_width="51dp"
        android:layout_height="53dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/edittext_search_main"
        android:background="@drawable/img_filter_2x"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_main"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_search_main"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="#BCC7CA"
        app:tabBackground="@drawable/main_tablayout_background"
        app:tabSelectedTextColor="#FFFFFFFF">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item1"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item2"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item3"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item4"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item5"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item6"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item7"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_main_tablayout_item8"/>
    </com.google.android.material.tabs.TabLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerviewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablayout_main"/>
</androidx.constraintlayout.widget.ConstraintLayout>