<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item_recyclerview_main"
            type="org.jeonfeel.pilotproject1.mainactivity.StarbucksMenuDTO" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_recyclerview_main_item"
        android:layout_width="140dp"
        android:layout_height="243dp"
        android:orientation="horizontal"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_recyclerview_main_item"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                coffeeImage="@{item_recyclerview_main.file_PATH}"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="starbucks"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="11dp" />

                <TextView
                    android:id="@+id/textview_recyclerview_main_item_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@{item_recyclerview_main.product_NM}"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <TextView
                    android:id="@+id/textview_recyclerview_main_item_kcal"
                    android:layout_width="64.02dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@{item_recyclerview_main.kcal + ` kcal`}"
                    android:layout_marginLeft="11dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

