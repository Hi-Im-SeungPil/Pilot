<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="243dp"
    android:orientation="horizontal"
    android:layout_marginBottom="17dp"
    android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageview_recyclerview_main_item"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="starbucks"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="11dp"/>
            <TextView
                android:id="@+id/textview_recyclerview_main_item_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="돌체 콜드 브루"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="11dp"/>
            <TextView
                android:id="@+id/textview_recyclerview_main_item_kcal"
                android:layout_width="64.02dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="87000원"
                android:layout_marginLeft="11dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

